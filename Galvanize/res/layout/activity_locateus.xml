<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:scaleType="center"
    android:orientation="vertical">

    <RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	tools:context=".GalvanizeFragment" >
    	
        <RelativeLayout
        	android:id="@+id/locateUsFirstBlock"
        	android:layout_width="380dp"
        	android:layout_height="match_parent"
        	android:layout_margin="10dp"
        	android:paddingTop="0dip"
        	android:paddingLeft="8dip"
        	android:paddingRight="8dip"
        	android:paddingBottom="8dip"
        	android:background="@drawable/rounded_corner" >
        	
            <TextView
            	android:id="@+id/locateUsTextView" 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/locate"
            	android:textColor="#E28C05"
            	android:textSize="28sp"
            	android:fontFamily="sans-serif-light" />
        
        	<View
            	android:id="@+id/dividerLineFirstBlock"
            	android:layout_below="@+id/locateUsTextView"
    			android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:layout_marginTop="2dp"
    			android:layout_marginBottom="8dp"
   				android:background="#FFFFFF"/>
        	
        	<TextView
           		android:id="@+id/galvanizeAddressTextView"
           		android:layout_below="@+id/dividerLineFirstBlock"
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:layout_marginBottom="10dp"
           		android:text="@string/galvanize_address"
           		android:textColor="#FFFFFF"
           		android:textSize="16sp"
           		android:fontFamily="sans-serif-light" />
        	
         </RelativeLayout>   
    	
    </RelativeLayout>

</ScrollView>
